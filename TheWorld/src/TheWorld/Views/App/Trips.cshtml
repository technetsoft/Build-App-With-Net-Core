@model IEnumerable<TheWorld.Models.Trip>
@{
    ViewBag.Title = "Trips Page";
}

@section scripts{
    <script src="~/lib/angular/angular.min.js"></script>
    <script src="~/js/app-trips.js"></script>
    <script src="~/js/tripsController.js"></script>
}

<div class="row" ng-app="app-trips">
    @*<div>{{ "Two plus two equals: " + (2 + 2) }}</div>*@
    <div ng-controller="tripsController as viewModel" class="col-md-6 col-md-offset-3">
        @*{{ vm.name }}*@
        
        <div class="text-danger" ng-show="viewModel.errorMessage">{{ viewModel.errorMessage }}</div>
        <div ng-show="viewModel.isBusy" class="text-center">
            <i class="fa fa-spinner fa-spin"></i> Loading...
        </div>

        <table class="table table-responsive table-striped">
            <tr ng-repeat="trip in viewModel.trips">
                <td>{{ trip.name }}</td>
                <td>{{ trip.dateCreated | date:'dd-MM-yyyy' }}</td>
                <td><a href="#" class="btn btn-sm btn-primary">Manage</a></td>
            </tr>
        </table>
        
        <form novalidate name="newTripForm" ng-submit="viewModel.addTrip()">
            <div class="form-group">
                <label for="name">Trip Name</label>
                <input id="name" name="name" type="text" class="form-control" 
                       ng-model="viewModel.newTrip.name" required ng-minlength="5" />
                <span ng-show="newTripForm.name.$error.required" class="text-muted">Name is required.</span>
                <span ng-show="newTripForm.name.$error.minlength" class="text-muted">Name must be at least 5 characters.</span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-success" ng-disabled="newTripForm.$invalid" />
            </div>
        </form>

    </div>

    <div class="col-md-6">
        <h3>The World</h3>
        <p>This will be a fun website soon!</p>

        <form>
            <div class="form-group">
                <label>Date</label>
                <input class="form-control" type="text"/>
            </div>
            <div class="form-group">
                <label>Location</label>
                <input class="form-control" type="text"/>
            </div>
            <div>
                <input class="btn btn-success" type="button" value="Add"/>
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <h2>The Map</h2>
        <ul>
            @foreach (var item in Model)
            {
                <li>@item.Name : @item.DateCreated.ToString("d")</li>
            }
        </ul>
    </div>
</div>